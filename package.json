{
  "name": "cypress",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "open": "cypress open",
    "dev": "cypress run",
    "test": "cypress run --browser chrome --headed",

    "test:mocha-reporter": "yarn dev --reporter mochawesome --reporter-options reportDir=\"cypress/results\",overwrite=false,html=false,json=true",
    "merge-report": "mochawesome-merge \"cypress/results/*.json\" > index.json",
    "build-report": "marge index.json",
    "open-report": "yarn merge-report && yarn build-report && serve mochawesome-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^12.7.0",
    "marge": "^1.0.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "serve": "^14.2.0"
  },
  "dependencies": {
    "cy2": "^4.0.6"
  }
}
